---
import ArtworkCarousel from './ArtworkCarousel.astro';
import type { Artwork } from '../types/gallery';

interface Props {
  roomId: string;
  roomName: string;
  artworks: Artwork[];
}

const { roomId, roomName, artworks } = Astro.props;
---

{artworks && artworks.length > 0 ? (
  <section class="room-section" data-room-id={roomId}>
    <header class="room-header">
      <h3 class="room-title">{roomName}</h3>
    </header>
    <ArtworkCarousel artworks={artworks} />
  </section>
) : null}
