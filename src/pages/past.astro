---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getExhibitionsByStatus } from '../utils/exhibitions';
import { formatDateRange } from '../utils/dates';
import { withBase } from '../utils/withBase';

const exhibitions = getExhibitionsByStatus('past');
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Expozitii trecute | Atrium Gallery" description="Arhiva expozitiilor anterioare.">
  <h1 class="section-title">Expozitii trecute</h1>
  <div class="exhibition-list">
    {exhibitions.map((exhibition) => (
      <article class="exhibition-item">
        <img class="exhibition-thumb" src={withBase(exhibition.thumbnail)} alt={exhibition.title} loading="lazy" />
        <div class="exhibition-info">
          <h3>{exhibition.title}</h3>
          <p class="exhibition-meta">{formatDateRange(exhibition.startDate, exhibition.endDate)}</p>
          <p>{exhibition.description}</p>
          <a class="exhibition-link" href={`${base}exhibition/${exhibition.id}/`}>Vezi arhiva</a>
        </div>
      </article>
    ))}
  </div>
</BaseLayout>
